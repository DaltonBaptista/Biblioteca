@model IEnumerable<Teste3.tbl_distrito>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<aside class="right-side">

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.descricao)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.descricao)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id_distrito }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id_distrito }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id_distrito })
                </td>
            </tr>
        }

    </table>
